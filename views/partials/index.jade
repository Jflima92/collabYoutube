div#intro
    h1 Welcome to Collaborative Youtube!
    div#menuButtons
        div(class="row row-centered")
            div(class ="col-xs-6 col-sm-3 col-centered")
                button(class="btn btn-primary" ng-click="createRoom()") Create New Room
        div(class="row row-centered")
            div(class ="col-xs-6 col-sm-3 col-centered")
                button(class="btn btn-primary" ng-click="joinRoom()") Join Room
        div(class="row row-centered")
            div(class ="col-xs-6 col-sm-3 col-centered")
                a(class="btn btn-primary", ng-click="logout()" ng-href="/auth/logout" target="_self" ) Logout


